generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
  
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  image       String   // This will store the Supabase storage URL
  imagePath   String?  // Path in Supabase bucket (for deletion)
  rate        String   @default("0.0")
  reviews     Int      @default(0)
  salePrice   Decimal?  @db.Decimal(10, 2) // e.g., 9999999.99
  price       Decimal  @db.Decimal(10, 2) // e.g., 9999999.99
  quantity    Int      @default(0)
  tag         String[] // Array of tags
  slug        String   @unique
  description String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}